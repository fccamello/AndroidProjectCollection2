<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlVar1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-13dp">


    <Button
        android:id="@+id/btn_LayoutExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Layout Exercise"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124" />

    <Button
        android:id="@+id/btn_changebg"
        android:layout_width="166dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:text="Change Background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToast" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="171dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:text="Close Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_LayoutExercise" />

    <Button
        android:id="@+id/btn_changebtn"
        android:layout_width="166dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:text="Change Button Background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_changebg" />

    <Button
        android:id="@+id/btnDisappear"
        android:layout_width="166dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:text="Disappear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_changebtn" />

    <Button
        android:id="@+id/btnToast"
        android:layout_width="166dp"
        android:layout_height="42dp"
        android:layout_marginTop="36dp"
        android:text="@string/btn_toast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnClose" />


</androidx.constraintlayout.widget.ConstraintLayout>